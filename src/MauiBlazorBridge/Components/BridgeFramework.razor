@namespace MauiBlazorBridge
@inject IBridge Bridge

@ChildContent?.Invoke(Bridge.Framework)

@if(Bridge.Framework == Framework.Maui)
{
    @Maui
}
else
{
    @Blazor
}

@code {

    [Parameter]
    public RenderFragment Maui { get; set; } = default!;

    [Parameter]
    public RenderFragment Blazor { get; set; } = default!;

    [Parameter]
    public RenderFragment<Framework>? ChildContent { get; set; }
}

@namespace MauiBlazorBridge
@inject IBridge Bridge

@ChildContent

@code{
    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;

    [Parameter]
    public ListenerType ListenerType { get; set; } = ListenerType.None;

    [Parameter]
    public int InternetConnectionIntervalInSeconds { get; set; } = 5;

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if(firstRender)
        {
            await Bridge.InitializeAsync(ListenerType, InternetConnectionIntervalInSeconds);
        }
    }

}
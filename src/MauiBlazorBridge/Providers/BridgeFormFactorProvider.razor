@namespace MauiBlazorBridge
@inject IBridgeFormFactor FormFactor

@ChildContent

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; } = default!;

    [Parameter]
    public ChangeListeningMode Mode { get; set; } = ChangeListeningMode.None;

    protected async override Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await FormFactor.InitializeAsync(Mode);
        }
    }

}

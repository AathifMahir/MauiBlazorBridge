@page "/bridge"
@rendermode InteractiveServer
@inject IBridge Bridge

<BridgeProvider/>
<BridgeConnectivityProvider />
<BridgeFormFactorProvider />

<BridgeFormFactor @bind-DeviceFormFactor="FormFactor">
    <Mobile>
        <h3>FormFactor : Mobile</h3>
    </Mobile>
    <Tablet>
        <h3>FormFactor : Tablet</h3>
    </Tablet>
    <Desktop>
        <h3>FormFactor : Desktop</h3>
    </Desktop>
    <Default>
        <h3>FormFactor : Unknown</h3>
    </Default>
</BridgeFormFactor>

<BridgePlatform>
    <Android>
        <h3>Platform : Android</h3>
    </Android>
    <IOS>
        <h3>Platform : IOS</h3>
    </IOS>
    <Windows>
        <h3>Platform : Windows</h3>
    </Windows>
    <Mac>
        <h3>Platform : Mac</h3>
    </Mac>
    <Default>
        <h3>Platform : Unknown</h3>
    </Default>
</BridgePlatform>

<h3>Platform Version : @Bridge.PlatformVersion</h3>
<h3>FrameWork : @Bridge.Framework</h3>

<BridgeConnectivity @bind-InternetConnection="isOnline">
    <Online>
        <h3>Internet : Online</h3>
    </Online>
    <Offline>
        <h3>Internet : Offline</h3>
    </Offline>
</BridgeConnectivity>

<h3>Internet From Binding : @(isOnline ? "Online" : "Offline")</h3>
<h3>Form Factor From Binding : @FormFactor.FormFactor</h3>

@code {

    bool isOnline = false;

    DeviceFormFactor FormFactor = DeviceFormFactor.UnknownState();
}
